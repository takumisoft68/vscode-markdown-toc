{
	"name": "markdown-toc",
	"publisher": "TakumiI",
	"displayName": "Markdown TOC",
	"description": "Create table of contents. Insert chapter numbers.",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/takumisoft68/vscode-markdown-toc"
	},
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"onLanguage:mdx"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "markdown-toc.insertChapterNumber",
				"title": "markdown-toc: Insert/Update chapter number"
			},
			{
				"command": "markdown-toc.deleteChapterNumber",
				"title": "markdown-toc: Delete chapter number"
			},
			{
				"command": "markdown-toc.insertToc",
				"title": "markdown-toc: Insert/Update table of contents"
			},
			{
				"command": "markdown-toc.deleteToc",
				"title": "markdown-toc: Delete table of contents"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == markdown",
					"command": "markdown-toc.insertChapterNumber",
					"group": "markdown-toc@1"
				},
				{
					"when": "editorLangId == markdown",
					"command": "markdown-toc.deleteChapterNumber",
					"group": "markdown-toc@2"
				},
				{
					"when": "editorLangId == markdown",
					"command": "markdown-toc.insertToc",
					"group": "markdown-toc@3"
				},
				{
					"when": "editorLangId == markdown",
					"command": "markdown-toc.deleteToc",
					"group": "markdown-toc@4"
				}
			]
		},
		"configuration": {
			"title": "Markdown TOC",
			"properties": {
				"markdown-toc.tocDepthFrom": {
					"type": "number",
					"default": 1,
					"description": "TOC depth control [1-6]"
				},
				"markdown-toc.tocDepthTo": {
					"type": "number",
					"default": 6,
					"description": "TOC depth control [1-6]"
				},
				"markdown-toc.chapterDepthFrom": {
					"type": "number",
					"default": 1,
					"description": "Chapter number depth control [1-6]"
				},
				"markdown-toc.chapterDepthTo": {
					"type": "number",
					"default": 6,
					"description": "Chapter number depth control [1-6]"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
